@using HealthBlog.Common.Trainers.BindingModels

@model AddDayToProgramBindingModel

<h3 class="text-center m-3">Добави ден към програма</h3>

<form method="post"
	  asp-area=""
	  asp-controller="@ControllerConstants.Days"
	  asp-action="@ActionConstants.AddToProgram"
	  asp-route-dayId="@Model.DayId">

	@Html.EditorForModel()

	<div class="mt-3">
		<input type="submit" class="btn btn-success" value="Добави" />
		<a asp-action="@ActionConstants.Index" asp-controller="@ControllerConstants.Days" asp-area="" class="btn btn-light">Назад</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}