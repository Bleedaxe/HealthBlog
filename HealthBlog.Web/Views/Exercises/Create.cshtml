@model ExerciseCreateBindingModel

<h3 class="text-center m-3">Създай упражнение</h3>


<form asp-action="@ActionConstants.Create" asp-controller="@ControllerConstants.Exercises" asp-route-redirectUrl="@ViewData["redirectUrl"]" method="post">
	@Html.EditorForModel()

	<div class="mt-3">
		<input type="submit" class="btn btn-success" value="Създай" />
		<a asp-action="@ActionConstants.Index" asp-controller="@ControllerConstants.Exercises" asp-area="" class="btn btn-light">Назад</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

