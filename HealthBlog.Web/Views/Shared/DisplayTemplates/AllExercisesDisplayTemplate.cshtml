@model IEnumerable<AllExercisesViewModel>

<h2 class="text-center m-3">Упражнения</h2>

@if (!Model.Any())
{
	<div>Нямаш създадени упражнения. <a asp-action="@ActionConstants.Create" asp-controller="@ControllerConstants.Exercises">Създай първото</a>.</div>
}
else
{
	<a asp-action="Create" asp-controller="Exercises" class="btn btn-primary">Създай ново</a>
	<table class="table table-striped table-responsive-md">
		<thead>
			<tr>
				<th>Име</th>
				<th>Мускулна група</th>
				<th>Действия</th>
			</tr>
		</thead>
		<tbody>

			@foreach (var exercise in Model)
			{
				<tr>
					<td>@exercise.Name</td>
					<td>@exercise.TargetMuscle</td>
					<td>
						<div class="btn-group">
							<a asp-action="@ActionConstants.Details" asp-controller="@ControllerConstants.Exercises" asp-area="" asp-route-id="@exercise.Id" class="btn btn-info mr-1">Детайли</a>
							<form asp-action="@ActionConstants.Delete"
								  asp-controller="@ControllerConstants.Exercises"
								  asp-area=""
								  method="post"
								  asp-route-id="@exercise.Id">
								<input type="submit" value="Изтрий" class="btn btn-danger" />
							</form>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
}