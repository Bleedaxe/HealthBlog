@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
	<h4>Създай нов профил.</h4>
	<hr />
	<div asp-validation-summary="All" class="text-danger"></div>

	@Html.FormGroupFor(model => model.Input.Username)

	@Html.FormGroupFor(model => model.Input.FullName)

	@Html.FormGroupFor(model => model.Input.Email)

	@Html.FormGroupFor(model => model.Input.Password)

	@Html.FormGroupFor(model => model.Input.ConfirmPassword)

	<div class="input-group-text pt-0 pb-0 mt-4 col-4">
		<input asp-for="Input.AreYouTrainer" />
		<label asp-for="Input.AreYouTrainer" class="form-control-plaintext"></label>
	</div>

	<button type="submit" class="btn btn-default mt-4">Register</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
