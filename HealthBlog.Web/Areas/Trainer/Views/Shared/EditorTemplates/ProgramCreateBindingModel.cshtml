@model ProgramCreateBindingModel

@Html.FormGroupFor(model => model.Name)

@Html.FormGroupFor(model => model.Type)

<div class="input-group mt-4">
	<div class="input-group-prepend">
		<label asp-for="@Model.Description" class="input-group-text"></label>
	</div>
	<textarea asp-for="@Model.Description" class="form-control"></textarea>
</div>
<span asp-validation-for="@Model.Description" class="text-danger"></span>
