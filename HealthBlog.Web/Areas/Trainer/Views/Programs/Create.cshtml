@model ProgramCreateBindingModel

<h3 class="text-center m-3">Създай програма</h3>

<form method="post"
	  asp-area="@RolesConstants.Trainer"
	  asp-controller="@ControllerConstants.Programs"
	  asp-action="@ActionConstants.Create">

	@Html.EditorForModel()

	<div class="mt-3">
		<input type="submit" class="btn btn-success" value="Създай" />
		<a asp-action="@ActionConstants.Index" asp-controller="@ControllerConstants.Programs" asp-area="@RolesConstants.Trainer" class="btn btn-light">Назад</a>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}